<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<payment>
			<simplcheckout>
				<active>1</active>
				<logging>1</logging>
                <title>SimplCheckout</title>
                <place_order_button_label>Place Order</place_order_button_label>
                <title_for_frontend>SimplCheckout</title_for_frontend>
                <client_id  backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <test_secret  backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <live_secret  backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <order_status>pending</order_status>
                <allowspecific>1</allowspecific>
                <specificcountry>IN</specificcountry>
				<model>SimplCheckoutPaymentFacade</model>
                <is_gateway>1</is_gateway>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_capture_partial>1</can_capture_partial>
                <can_capture_once>1</can_capture_once>
                <can_refund>1</can_refund>
                <can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
                <can_void>1</can_void>
                <can_cancel>1</can_cancel>
                <can_use_internal>1</can_use_internal>
                <can_use_checkout>1</can_use_checkout>
                <can_save_cc>0</can_save_cc>
                <can_use_for_multishipping>0</can_use_for_multishipping>
			</simplcheckout>
		</payment>
	</default>
</config>
